+package org.eolang.gray
+rt jvm org.eolang:eo-runtime:0.0.0

# Random-access memory (RAM).
[size] > ram

  # Write bytes B at position P.
  # Returns itself.
  [p b] > write /true

  # Read L bytes at position P.
  [p l] > read /bytes
