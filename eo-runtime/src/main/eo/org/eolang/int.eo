+package org.eolang
+rt jvm org.eolang:eo-runtime:0.0.0

[] > int
  # Tests that $ = x
  [x] > eq
    eq. > @
      ^.as-bytes
      x.as-bytes

  # Tests that $ â‰  x
  [x] > neq
    (^.eq x).not > @

  # Tests that $ < x
  [x] > less
    and. > @
      (^.eq x).not
      (^.greater x).not

  # Tests that $ â‰¤ x
  [x] > leq
    or. > @
      ^.eq x
      ^.less x

  # Tests that $ > x
  [x] > greater /bool

  # Tests that $ â‰¥ x
  [x] > geq
    or. > @
      ^.eq x
      ^.greater x

  # Change the sign of the number
  [] > neg
    ^.mul -1 > @

  # Add to the current one
  [x] > add /int

  # Subtract from the current one
  [x] > sub
    ^.add (x.neg) > @

  # Multiply this one by another int
  [x] > mul /int

  # Divide this one by another int
  [x] > div /int

  # Calculate MOD
  [x] > mod /int

  # Make it power x
  [x] > pow /int

  # Converts this to float
  [] > as-float /float

  # Converts this to string
  [] > as-string /string

  # Converts this to bytes
  [] > as-bytes /bytes

  # Absolute value of $ (i.e., with no sign)
  [] > abs
    if. > @
      ^.geq 0
      ^
      ^.neg
